<li class="list-group-item">
    <button class="btn btn-outline-primary d-flex align-items-center" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ validador.id }}" aria-expanded="false" aria-controls="collapse-{{ validador.id }}">
        <span id="validador-span-{{ validador.id }}" class="me-auto">{{ 'Experto' if validador.tipo == 'expert' else 'Nativo' }} - {{ validador.nombre if validador.nombre is not none else 'Sin nombre' }}</span>
        <i class="fas fa-caret-down ms-2"></i>
    </button>
    <div class="collapse" id="collapse-{{ validador.id }}">
        <form id="validador-form-{{ validador.id }}" onsubmit="submitForm(event, '{{ validador.id }}')">
            <div class="row">
                <div class="form-group col-md-4">
                    <label for="nombre-{{ validador.id }}" class="mr-2">Nombre:</label>
                    <input type="text" class="form-control" id="nombre-{{ validador.id }}" name="nombre" value="{{ validador.nombre if validador.nombre is not none else '' }}" onblur="submitForm(event, '{{ validador.id }}')">
                </div>
                <div class="form-group col-md-4">
                    <label for="contacto-{{ validador.id }}" class="mr-2">Contacto:</label>
                    <input type="text" class="form-control" id="contacto-{{ validador.id }}" name="contacto" value="{{ validador.contacto if validador.contacto is not none else '' }}" onblur="submitForm(event, '{{ validador.id }}')">
                </div>
                <div class="form-group col-md-4">
                    <label for="url-{{ validador.id }}" class="mr-2">Enlace de invitaci√≥n:</label>
                    <button type="button" class="btn btn-link" onclick="copyToClipboard('{{ validador.url }}')">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label for="progreso-{{ validador.id }}" class="mr-2">Progreso:</label>
                <div class="progress">
                    <div id="progress-bar-{{ validador.id }}" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        0%
                    </div>
                </div>
            </div>
        </form>
    </div>
</li>


